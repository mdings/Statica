{
  "name": "statica",
  "description": "Compile a static website really easy",
  "author": "Maarten Dings <maartendings@gmail.com>",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "./node_modules/.bin/electron-rebuild",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "version": "electron -v",
    "start": "concurrently \"npm run electron\" \"npm run dev\"",
    "electron": "cross-env NODE_ENV=development electron .",
    "package": "npm run build; npm run package-osx; npm run package-win; npm run package-linux;",
    "package-osx": "electron-packager ./ --platform=darwin --arch=x64 --icon=assets/app.icns --out=package --asar=true --overwrite=force",
    "package-win": "electron-packager ./ --platform=win32 --arch=ia32 --icon=assets/app.ico --out=package --asar=true --overwrite=force",
    "package-linux": "electron-packager ./ --platform=linux --arch=ia32 --icon=assets/app.ico --out=package --asar=true --overwrite=force"
  },
  "build": {
    "appId": "com.statica.www"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "license": "CC0-1.0",
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "concurrently": "^3.4.0",
    "copyfiles": "^1.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "electron": "^1.4.13",
    "electron-rebuild": "^1.5.7",
    "electron-reload": "^1.1.0",
    "file-loader": "^0.9.0",
    "node-sass": "^3.11.3",
    "sass-loader": "^4.0.2",
    "shortid": "^2.2.8",
    "upath": "^1.0.0",
    "vue": "^2.3.0",
    "vue-loader": "^9.9.5",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.0"
  },
  "dependencies": {
    "electron-json-storage": "^3.0.5",
    "keytar": "^3.0.2",
    "require-dir": "^0.3.1"
  }
}
