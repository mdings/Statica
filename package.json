{
  "name": "statica",
  "description": "Compile a static website really easy",
  "author": "Maarten Dings <maartendings@gmail.com>",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "copyfiles darwin-x64-50/* app/node_modules/node-sass/vendor && install-app-deps",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "start": "electron ./app",
    "release": "electron-packager ./app Statica --out=dist && electron-installer-dmg --overwrite ./dist/Statica-darwin-x64/Statica.app Statica"
  },
  "build": {
    "appId": "com.statica.www"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "license": "CC0-1.0",
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "copyfiles": "^1.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "electron": "^1.4.13",
    "file-loader": "^0.9.0",
    "node-sass": "^3.11.3",
    "sass-loader": "^4.0.2",
    "vue-loader": "^9.7.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
